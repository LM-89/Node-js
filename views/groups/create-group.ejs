<%- include('../partials/header', { title: 'Groups | Add' }) %>

    <main>
        <div class="body-container">
            <div>
                <a href="/">Home Page</a>
                <a href="/groups">Groups List</a>
    
                <h1>Create a Group</h1>
    
                <form action="/group-created" method="POST" class="create-group-form">
    
                    <div class="form-control">
                        <label for="group-name">Group Name:</label>
                        <input type="text" name="name" id="group-name" required />
                    </div>
    
                    <div class="form-control">
                        <label for="group-description">Description:</label>
                        <textarea name="description" id="group-description" required></textarea>
                    </div>
    
                    <button type="submit">Create Group</button>
                </form>
    
            </div>
        </div>
    </main> 

